<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="pos_rating.ProductCard"
       t-inherit="point_of_sale.ProductCard"
       t-inherit-mode="extension">
     <xpath expr="//div[hasclass('product-information-tag')]" position="before">
        <div>
            <t t-if="props.rating">
                <t t-if="props.rating == 2">
                <i class="fa fa-star text-warning"/>
                </t>
                <t t-if="props.rating == 3">
                <i class="fa fa-star text-warning"/>
                <i class="fa fa-star text-warning"/>
                </t>
                <t t-if="props.rating == 4">
                <i class="fa fa-star text-warning"/>
                <i class="fa fa-star text-warning"/>
                <i class="fa fa-star text-warning"/>
                </t>
                <t t-if="props.rating == 5">
                <i class="fa fa-star text-warning"/>
                <i class="fa fa-star text-warning"/>
                <i class="fa fa-star text-warning"/>
                <i class="fa fa-star text-warning"/>
                </t>
            </t>
        </div>
     </xpath>
    </t>
</templates>