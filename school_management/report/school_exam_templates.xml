<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_exam">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>
                        <center>Exam Report</center>
                    </h2>
                </div>
                <t t-foreach="docs" t-as="line">
                <div>
                    <span>Exam Name : <t t-esc="line['exam_name']"/> <![CDATA[&nbsp;]]> <![CDATA[&nbsp;]]> Start Date
                        : <t t-esc="line['start_date']"/> <![CDATA[&nbsp;]]> <![CDATA[&nbsp;]]> End Date :
                        <t t-esc="line['end_date']"/> <![CDATA[&nbsp;]]> <![CDATA[&nbsp;]]> Class : <t t-esc="line['class_name']"/></span>
                </div>
                <table  class="table table-sm o_main_table">
                        <tr>
                            <th>Paper</th>
                            <th>Pass Mark</th>
                            <th>Max Mark</th>
                        </tr>
                <t t-foreach="paper" t-as="pap">
                    <t t-if="line['exam_name'] == pap['exam_name']">
                    <tr>
                        <td><span t-esc="pap['exam_paper']"/></td>
                        <td><span t-esc="pap['pass_mark']"/></td>
                        <td><span t-esc="pap['max_mark']"/></td>
                    </tr>
                    </t>
                </t>
                </table>
            </t>
            </t>
        </t>
    </template>
</odoo>