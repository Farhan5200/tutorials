                <t t-if="not selected_values['selected_department'] and selected_values['selected_class']">
                    <t t-if="selected_values['selected_student']">
                        <table  class="table table-sm o_main_table">
                        <tr>
                            <th>Admission Number</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Class</th>
                            <th>Department</th>
                        </tr>
                <t t-foreach="docs" t-as="line">
