                    <t t-if="selected_values['selected_student']">
                        <table  class="table table-sm o_main_table">
                        <tr>
                            <th>Admission Number</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Class</th>
                            <th>Department</th>
                        </tr>
                <t t-foreach="docs" t-as="line">
                    <tr>
                        <td><span t-esc="line['admission_no']"/></td>
