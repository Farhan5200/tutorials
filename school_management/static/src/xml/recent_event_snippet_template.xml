<?xml version="1.0" encoding="UTF-8" ?>
<templates id="sem" xml:space="preserve">
    <t t-name="school_management.recent_event_wise">
        <div id="course_carousel" class="container carousel slide" data-bs-ride="carousel"
             t-att-data-bs-interval="interval" style="height:100%;">
            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                <t t-foreach="result" t-as="res" t-key="val_res">
                    <div t-att-class="res.is_active ? 'carousel-item active' : 'carousel-item'">
                        <div class="row">
                            <t t-foreach="res" t-as="value" t-key="val_index">
                                <div class="block span3 col-3">
                                    <div class="card-group">
                                        <div class="card-deck snippet"
                                             style="width: 18rem; padding:10px; margin:10px; border-radius:10px; box-shadow: 10px 10px 10px 10px  #BCBCCB48;">
                                            <div class="card">
                                                <span style="display:none">
                                                    <t t-esc="value.id"/>
                                                </span>
                                                <div class="card-body">
                                                    <t t-if="value.photo">
                                                        <img class="card-img-top"
                                                             t-attf-src="data:image/jpeg;base64,{{value.photo}}"
                                                             style="height:142px;"/>
                                                    </t>
                                                    <t t-else="">
                                                        <img class="card-img-top"
                                                             src="/school_management/static/src/img/snippets/no_image_available.jpg"
                                                             style="height:142px;"/>
                                                    </t>
                                                    <h5 class="card-title text-center">
                                                        <t t-esc="value.name"/>
                                                    </h5>
                                                    <br/>
                                                    <br/>
                                                    <p class="card-text">
                                                        <t t-esc="value.description"/>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>
                <br/>
            </div>
        </div>
        <a t-attf-href="#course_carousel" class="carousel-control-prev" data-bs-slide="prev" role="button"
           aria-label="Previous" title="Previous">

            <span class="fa fa-chevron-circle-left fa-2x"/>
            <span class="visually-hidden">Previous</span>

        </a>
        <a t-attf-href="#course_carousel" class="carousel-control-next" data-bs-slide="next" role="button"
           aria-label="Next" title="Next">

            <span class="fa fa-chevron-circle-right fa-2x"/>

            <span class="visually-hidden">Next</span>

        </a>
    </t>
</templates>



