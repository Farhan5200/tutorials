<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="school_event_view_form" model="ir.ui.view">
        <field name="name">school.event.view.form</field>
        <field name="model">school.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="club_id" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True, 'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="school_event_view_tree" model="ir.ui.view">
        <field name="name">school.event.view.tree</field>
        <field name="model">school.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="school_event_view_action" model="ir.actions.act_window">
        <field name="name">Event</field>
        <field name="res_model">school.event</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_event_menu" action="school_event_view_action" parent="school_management_root_menu"/>
</odoo>