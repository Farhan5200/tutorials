<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="student_registration_form_view" model="ir.ui.view">
        <field name="name">student_registration_form_view</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_button_confirm" string="Confirm" type="object" class="oe_highlight" invisible="status in 'registration'"/>
                    <field name="status" widget="statusbar" options="{'clickable':'1'}" />
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <field name="photo" widget="image" options="{'size': [150, 150]}" style="position: absolute;left: 1000px;top: 10px;"/>
                    <group>
                     <group>
                         <field name="first_name"/>
                         <field name="last_name"/>
                         <field name="email"/>
                         <field name="Phone"/>
                         <field name="aadhaar_number"/>
                     </group>
                    <group>
                        <field name="registration_date" style="width: 50%;"/>
                        <field name="gender" style="width: 50%;" required="status in 'registration'"/>
                        <field name="date_of_birth" style="width: 50%;"/>
                        <field name="age" required="status in 'registration'" style="width: 50%;"/>
                        <field name="father" style="width: 50%;"/>
                        <field name="mother" style="width: 50%;"/>
                    </group>
                    </group>
                    <notebook>
                        <page string="Communication">
                            <group>
                            <group string="Communication Address">
                                <div class="o_address_format" colspan="2">
                                <field name="c_street" nolabel="1" placeholder="Street..."/>
                                <field name="c_street2" nolabel="1" placeholder="Street 2..."/>
                                <field name="c_city" nolabel="1" placeholder="City" class="o_address_city"/>
                                <field name="c_zip" nolabel="1" placeholder="ZIP" class="o_address_zip"/>
                                <field name="c_state_id" nolabel="1" class="o_address_state" placeholder="State"/>
                                <field name="c_country_id" nolabel="1" placeholder="Country"/>
                                </div>
                            </group>
                            <group string="Permanent Address">
                                <field name="same_as_communication"/>
                                <div class="o_address_format" colspan="2">
                                <field name="p_street" placeholder="Street..." class="o_address_street"/>
                                <field name="p_street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="p_city" placeholder="City" class="o_address_city"/>
                                <field name="p_zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="p_state_id" class="o_address_state" placeholder="State"/>
                                <field name="p_country_id" placeholder="Country"/>
                                </div>
                            </group>
                            </group>
                        </page>
                        <page string="Academic">
                            <group>
                                <field name="previous_academic_department_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="previous_class_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('department_id', '=', previous_academic_department_id)]"/>
                                <field name="file" string="TC" options="{'accepted_file_extensions': '.pdf'}" filename="filename"/>
                                <field name="club_id" widget="many2many_tags"/>
                                <field name="school_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="student_registration_tree_view" model="ir.ui.view">
        <field name="name">Registration</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="gender"/>
                <field name="registration_date"/>
            </tree>
        </field>
    </record>

     <record id="student_registration_action" model="ir.actions.act_window">
        <field name="name">Student Registration</field>
        <field name="res_model">student.registration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_management_root_menu" name="School Management"/>
    <menuitem id="school_management_student_menu" name="Students" parent="school_management_root_menu"/>
    <menuitem id="school_management_registration_menu" name="Registration" parent="school_management_student_menu" action="student_registration_action"/>

</odoo>