<!--student creation page-->
    <template id="student_registration_website_template" name="Student Registration">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <center>
                        <h3>Student Registration</h3>
                    </center>
                    <br/>
                    <form method="POST" action="/students">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <!--                        First Name-->
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="first_name">
                                First Name *
                            </label>
                            <div class="col-sm">
                                <input id="first_name" type="text" class="form-control s_website_form_input"
                                       name="first_name"
                                       required="" data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>
                        <!--                            Last Name-->
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="last_name">
                                Last Name
                            </label>
                            <div class="col-sm">
                                <input id="last_name" type="text" class="form-control s_website_form_input"
                                       name="last_name"
                                       data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>
                        <!--                        Email-->
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="email">
                                Email *
                            </label>
                            <div class="col-sm">
                                <input id="email" type="email" class="form-control s_website_form_input" name="email"
                                       required="" data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>
                        <!--                        Phone-->
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="phone">
                                Phone *
                            </label>
                            <div class="col-sm">
                                <input id="phone" type="number" class="form-control s_website_form_input" name="phone"
                                       required="" data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>
                        <!--                        communication address-->
                        Communication Address
                        <br/><br/>
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="communication_street">
                                Street *
                            </label>
                            <div class="col-sm">
                                <input id="communication_street" type="text" class="form-control s_website_form_input" name="communication_street"
                                       required="" data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>

                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="communication_city">
                                City *
                            </label>
                            <div class="col-sm">
                                <input id="communication_city" type="text" class="form-control s_website_form_input" name="communication_city"
                                       required="" data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>

                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 300px"
                                   for="permanent_address_same_as_above">
                                 Permanent address same as above*
                            </label>
                            <div class="col-sm">
                                <input id="permanent_address_same_as_above" type="checkbox"  name="permanent_address_same_as_above"
                                       required="" data-fill-with="name" style="width: 10%" checked="yes"/>
                            </div>
                        </div>


<!--                        Permanent Address-->
                        Permanent Address
                        <br/><br/>
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="permanent_street">
                                Street *
                            </label>
                            <div class="col-sm">
                                <input id="permanent_street" type="text" class="form-control s_website_form_input" name="permanent_street"
                                        data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>

                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                   for="permanent_city">
                                City *
                            </label>
                            <div class="col-sm">
                                <input id="permanent_city" type="text" class="form-control s_website_form_input" name="permanent_city"
                                        data-fill-with="name" style="width: 65%"/>
                                <br/>
                            </div>
                        </div>

                        <center>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        </center>
                    </form>
                </div>
            </div>
        </t>
    </template>



<!--    all student data page main students menu -->

    <template id="student_data_website_template" name="Student Details">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <center>
                        <h3>Student Details</h3>
                    </center>
                    <br/>
                </div>
                <div style="padding: 5px;">
                    <button onclick="location.href = '/student-registration'" type="button" class="btn btn-primary">Create</button>
                </div>
                <table class="table-striped table">
                    <thead style="font-size: 23px;">
                        <tr>
                            <h6>
                                <b>
                                    <th>Admission Number</th>
                                    <th>First Name</th>
                                    <th>Gender</th>
                                    <th>Registration Date</th>
                                    <th>Status</th>
                                </b>
                            </h6>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="records" t-as="student">
                            <tr>
                                <td>
                                    <span t-esc="student.name"/>
                                </td>
                                <td>
                                    <span t-esc="student.first_name"/>
                                </td>
                                <td>
                                    <span t-esc="student.gender"/>
                                </td>
                                <td>
                                    <span t-esc="student.registration_date"/>
                                </td>
                                <td>
                                    <span t-esc="student.status"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>