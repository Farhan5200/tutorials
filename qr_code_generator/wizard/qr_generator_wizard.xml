<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="qr_generator_wizard_form_view" model="ir.ui.view">
        <field name="name">qr.generator.wizard.form.view</field>
        <field name="model">qr.generator.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="text_box"/>
                    <field name="qr_code" widget="image"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="reset" id="generate_btn"/>
                    <!--                    <button name="action_print_report_pdf" string="Print PDF" type="object"-->
                    <!--                            class="oe_highlight"/>-->
<!--                    <button string="Reset" type="object" name="reset" id="reset_btn"/>-->
                    <button
                            type="action"
                            name="%(owl_workshop.advanced_dashboard_action)d"
                            class="oe_edit_only btn-sm btn-link mb4 fa fa-globe"
                            aria-label="Add a language"
                            title="Add a language"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="qr_generator_wizard" model="ir.actions.act_window">
        <field name="name">Generate QR Code</field>
        <field name="res_model">qr.generator.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>